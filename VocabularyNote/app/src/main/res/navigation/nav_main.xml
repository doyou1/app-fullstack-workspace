    <fragment
        android:id="@+id/fragment_main_edit"
        android:name="com.example.vocabularynote.main.MainEditFragment" />

    <fragment
        android:id="@+id/fragment_main_game"
        android:name="com.example.vocabularynote.main.MainGameFragment" />

    <fragment
        android:id="@+id/fragment_main_setting"
        android:name="com.example.vocabularynote.main.MainSettingFragment" />

    <action
        android:id="@+id/action_default_to_add"
        app:destination="@id/fragment_main_add" />

    <action
        android:id="@+id/action_default_to_edit"
        app:destination="@id/fragment_main_edit" />

    <action
        android:id="@+id/action_default_to_game"
        app:destination="@id/fragment_main_game" />

    <action
        android:id="@+id/action_default_to_setting"
